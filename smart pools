  <div class="card">
    <h2> Smart Pools ترحب بكم</h2>
    <p>أدخل اسمك الآن واحصل على كود خصم مصمم خصيصصا لك </p>
    <input type="text" id="name" placeholder="اكتب اسمك هنا">
    <button onclick="generateCode()">استلام الكود</button>
    <div class="note">الكود صالح لمدة 30 دقائق فقط</div>
  </div>

  <script>
    function generateCode() {
      const name = document.getElementById("name").value.trim();
      if (!name) {
        alert("رجاءً أدخل اسمك أولاً");
        return;
      }

      const code = Math.random().toString(36).substr(2, 6).toUpperCase();
      const message = `مرحباً ${name} \nكودك الخاص: *${code}*\nصالح لمدة 30 دقائق فقط.`;

      const phone = "96892384013"; // ← عدلي الرقم هنا
      const link = `https://wa.me/${phone}?text=${encodeURIComponent(message)}`;
      window.open(link, '_blank');
    }
  </script>
